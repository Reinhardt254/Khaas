<section class="collections">
  <div class="collections-header">
    <div class="header-title">
      {% if section.settings.left_flower != blank %}
        <img src="{{ section.settings.left_flower | img_url: 'master' }}" alt="Collections" class="collections-left-flower">
      {% else %}
        <img src="{{ 'left-pink-flower.png' | asset_url }}" alt="Collections" class="collections-left-flower">
      {% endif %}
      <span class="line line-left"></span>
      <img src="{{ section.settings.title_image | img_url: 'master' }}" alt="Collections" class="collections-round">
      <span class="line line-right"></span>
      {% if section.settings.right_flower != blank %}
        <img src="{{ section.settings.right_flower | img_url: 'master' }}" alt="Collections" class="collections-right-flower">
      {% else %}
        <img src="{{ 'right-pink-flower.png' | asset_url }}" alt="Collections" class="collections-right-flower">
      {% endif %}
    </div>
  </div>

  <div class="stamp-container swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide" {{ block.shopify_attributes }}>
          <div class="stamp">
            {% if section.settings.frame_bg != blank %}
              <img src="{{ section.settings.frame_bg | img_url: 'master' }}" alt="Frame" class="stamp-bg">
            {% else %}
              <img src="{{ 'frame-bg.png' | asset_url }}" alt="Frame" class="stamp-bg">
            {% endif %}
            <div class="stap-contaner">
              <div class="stamp-image">
                {% if section.settings.frame_image != blank %}
                  <img src="{{ section.settings.frame_image | img_url: 'master' }}" alt="Frame" class="frame-image">
                {% else %}
                  <img src="{{ 'frame.png' | asset_url }}" alt="Frame" class="frame-image">
                {% endif %}
                {% if block.settings.collection_image != blank %}
                  <img src="{{ block.settings.collection_image | img_url: 'master' }}" alt="{{ block.settings.title }}" class="stamp-image-item">
                {% endif %}
              </div>
              <div class="stamp-text">
                <div class="stamp-text-title">
                  {% if block.settings.title_image != blank %}
                    <img src="{{ block.settings.title_image | img_url: 'master' }}" alt="{{ block.settings.title }}">
                  {% endif %}
                </div>
                <p>{{ block.settings.description }}</p>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="navigation-container">
      <div class="swiper-collection-button-next">
        {% if section.settings.arrow_image != blank %}
          <img src="{{ section.settings.arrow_image | img_url: 'master' }}" alt="Next" class="navigation-image">
        {% else %}
          <img src="{{ 'arrow-right.png' | asset_url }}" alt="Next" class="navigation-image">
        {% endif %}
      </div>
    </div>
  </div>
</section>

