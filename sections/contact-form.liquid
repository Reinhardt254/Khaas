{%- style -%}
  .khaas-contact-section {
    background: #f0eadc;
    padding: 80px 0;
    position: relative;
    overflow: hidden;
  }

  .khaas-contact-container {
    width: 95%;
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 60px;
    align-items: start;
  }

  .khaas-contact-info {
    background: rgba(139, 115, 85, 0.05);
    padding: 40px;
    border-radius: 15px;
    height: 100%;
  }

  .khaas-contact-info-header {
    margin-bottom: 40px;
  }

  .khaas-contact-info-title {
    font-family: "Playfair Display", serif;
    font-size: 32px;
    color: #3b0207;
    margin-bottom: 20px;
  }

  .khaas-contact-info-text {
    color: #6b5b47;
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 40px;
  }

  .khaas-contact-details {
    margin-bottom: 40px;
  }

  .khaas-contact-detail-item {
    display: flex;
    align-items: flex-start;
    gap: 15px;
    margin-bottom: 20px;
    color: #2f2f2f;
  }

  .khaas-contact-detail-item svg {
    width: 24px;
    height: 24px;
    color: #8b7355;
  }

  .khaas-contact-social {
    display: flex;
    gap: 15px;
    margin-top: 30px;
  }

  .khaas-contact-social a {
    width: 40px;
    height: 40px;
    background: #8b7355;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .khaas-contact-social a:hover {
    background: #6b5b47;
    transform: translateY(-2px);
  }

  .khaas-contact-social img {
    width: 20px;
    height: 20px;
    filter: brightness(0) invert(1);
  }

  .khaas-contact-form-wrapper {
    background: white;
    padding: 40px;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(139, 115, 85, 0.1);
  }

  .khaas-form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .khaas-form-full {
    grid-column: 1 / -1;
  }

  @media screen and (max-width: 991px) {
    .khaas-contact-container {
      grid-template-columns: 1fr;
      gap: 40px;
    }
  }

  @media screen and (max-width: 768px) {
    .khaas-contact-section {
      padding: 60px 0;
    }
    
    .khaas-form-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Keep existing form styles but update these: */
  .khaas-form-field {
    width: 100%;
    padding: 15px 20px;
    border: 1px solid rgba(139, 115, 85, 0.2);
    border-radius: 8px;
    font-size: 16px;
    transition: all 0.3s ease;
    background: #f8f5f0;
    color: #2f2f2f;
    font-family: "Playfair Display", serif;
  }

  .khaas-form-field:focus {
    outline: none;
    border-color: #8b7355;
    box-shadow: 0 0 0 2px rgba(139, 115, 85, 0.1);
    background: white;
  }

  .khaas-form-field::placeholder {
    color: #6b5b47;
    opacity: 0.6;
  }

  .khaas-form-textarea {
    min-height: 150px;
    resize: vertical;
    line-height: 1.6;
  }

  .khaas-submit-button {
    background: #3b0207;
    color: white;
    border: none;
    padding: 18px 40px;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: block;
    width: 100%;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-top: 30px;
    font-family: "Playfair Display", serif;
  }

  .khaas-submit-button:hover {
    background: #8b7355;
    transform: translateY(-2px);
  }

  .khaas-form-success {
    background: rgba(75, 181, 67, 0.1);
    color: #2d5a2b;
    padding: 15px 20px;
    border-radius: 8px;
    margin-bottom: 25px;
    font-size: 15px;
    border: 1px solid rgba(75, 181, 67, 0.2);
    display: none;
  }

  .khaas-form-success.show {
    display: block;
  }

  .khaas-form-error {
    background: rgba(220, 38, 38, 0.1);
    color: #991b1b;
    padding: 15px 20px;
    border-radius: 8px;
    margin-bottom: 25px;
    font-size: 15px;
    border: 1px solid rgba(220, 38, 38, 0.2);
    display: none;
  }

  .khaas-form-error.show {
    display: block;
  }

  .khaas-form-field:invalid {
    border-color: rgba(59, 2, 7, 0.3);
  }
{%- endstyle -%}

<div class="khaas-contact-section">
  <div class="khaas-contact-container">
    <div class="khaas-contact-info">
      <div class="khaas-contact-info-header">
        <h2 class="khaas-contact-info-title">{{ section.settings.info_title | escape }}</h2>
        <p class="khaas-contact-info-text">{{ section.settings.info_text }}</p>
      </div>

      <div class="khaas-contact-details">
        {% if section.settings.address != blank %}
          <div class="khaas-contact-detail-item">
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/></svg>
            <span>{{ section.settings.address }}</span>
          </div>
        {% endif %}

        {% if section.settings.phone != blank %}
          <div class="khaas-contact-detail-item">
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/></svg>
            <span>{{ section.settings.phone }}</span>
          </div>
        {% endif %}

        {% if section.settings.email != blank %}
          <div class="khaas-contact-detail-item">
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/></svg>
            <span>{{ section.settings.email }}</span>
          </div>
        {% endif %}

        {% if section.settings.hours != blank %}
          <div class="khaas-contact-detail-item">
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/></svg>
            <span>{{ section.settings.hours }}</span>
          </div>
        {% endif %}
      </div>

      <div class="khaas-contact-social">
        {%- if settings.social_facebook_link != blank -%}
          <a href="{{ settings.social_facebook_link }}" class="social-icon" target="_blank">
            {% render 'icon-facebook' %}
          </a>
        {%- endif -%}
        {%- if settings.social_instagram_link != blank -%}
          <a href="{{ settings.social_instagram_link }}" class="social-icon" target="_blank">
            {% render 'icon-instagram' %}
          </a>
        {%- endif -%}
        {%- if settings.social_youtube_link != blank -%}
          <a href="{{ settings.social_youtube_link }}" class="social-icon" target="_blank">
            {% render 'icon-youtube' %}
          </a>
        {%- endif -%}
      </div>
    </div>

    <div class="khaas-contact-form-wrapper">
      {%- form 'contact', id: 'KhaasContactForm', class: 'khaas-contact-form' -%}
        {%- if form.posted_successfully? -%}
          <div class="khaas-form-success show">
            Thank you for your message. We'll get back to you as soon as possible.
          </div>
        {%- endif -%}
        
        {%- if form.errors -%}
          <div class="khaas-form-error show">
            Please ensure all required fields are filled out correctly.
          </div>
        {%- endif -%}

        <div class="khaas-form-grid">
          <div class="khaas-form-group">
            <label class="khaas-form-label" for="ContactFirstName">First name</label>
            <input type="text" id="ContactFirstName" class="khaas-form-field" name="contact[first_name]" value="{% if form.first_name %}{{ form.first_name }}{% endif %}" required>
          </div>

          <div class="khaas-form-group">
            <label class="khaas-form-label" for="ContactLastName">Last name</label>
            <input type="text" id="ContactLastName" class="khaas-form-field" name="contact[last_name]" value="{% if form.last_name %}{{ form.last_name }}{% endif %}" required>
          </div>

          <div class="khaas-form-group">
            <label class="khaas-form-label" for="ContactEmail">Email</label>
            <input type="email" id="ContactEmail" class="khaas-form-field" name="contact[email]" value="{% if form.email %}{{ form.email }}{% endif %}" autocorrect="off" autocapitalize="off" required>
          </div>

          <div class="khaas-form-group">
            <label class="khaas-form-label" for="ContactPhone">Phone number</label>
            <input type="tel" id="ContactPhone" class="khaas-form-field" name="contact[phone]" value="{% if form.phone %}{{ form.phone }}{% endif %}" pattern="[0-9\-]*">
          </div>

          <div class="khaas-form-group khaas-form-full">
            <label class="khaas-form-label" for="ContactMessage">Message</label>
            <textarea id="ContactMessage" class="khaas-form-field khaas-form-textarea" name="contact[body]" rows="6" required>{% if form.body %}{{ form.body }}{% endif %}</textarea>
          </div>
        </div>

        <button type="submit" class="khaas-submit-button">Send message</button>
      {%- endform -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Contact Form",
  "settings": [
    {
      "type": "text",
      "id": "info_title",
      "label": "Contact Info Title",
      "default": "Contact Us"
    },
    {
      "type": "textarea",
      "id": "info_text",
      "label": "Contact Info Text",
      "default": "Have any questions? We'd love to hear from you. Send us a message and we'll respond as soon as possible."
    },
    {
      "type": "text",
      "id": "address",
      "label": "Address",
      "default": "202 Christina Dr East Dundee, IL 60118"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone Number",
      "default": "773.097.6543"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address",
      "default": "assistant@oneinvestmentholding.com"
    },
    {
      "type": "text",
      "id": "hours",
      "label": "Business Hours",
      "default": "Monday-Friday, 9:00 AM - 6:00 PM"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "youtube_url",
      "label": "YouTube URL"
    }
  ],
  "presets": [
    {
      "name": "Contact Form"
    }
  ]
}
{% endschema %} 

