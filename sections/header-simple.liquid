{% assign main_menu = linklists[section.settings.main_menu] %}

<style>
.khaas-header-simple {
  background: transparent;
  height: 80px;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  z-index: 1000;
}

.khaas-navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin: 0 auto;
  padding: 0 40px;
}

.khaas-nav-left {
  display: flex;
  gap: 30px;
  position: relative;
  z-index: 1000;
}

.khaas-nav-link {
  text-decoration: none;
  color: #2f2f2f;
  font-weight: 400;
  font-size: 15px;
  transition: color 0.3s ease;
  font-family: "Playfair Display", serif;
  display: flex;
  align-items: center;
  gap: 5px;
}

.khaas-nav-link:hover {
  color: #6b5b4784;
}

.khaas-nav-link-dropdown {
  position: relative;
}

.khaas-dropdown-icon {
  display: inline-flex;
  transition: transform 0.3s ease;
  margin-left: 5px;
}

.khaas-dropdown-icon img {
  width: 12px;
  height: 12px;
  object-fit: contain;
}

.khaas-nav-link-dropdown:hover .khaas-dropdown-icon {
  transform: rotate(180deg);
}

.khaas-dropdown-content {
  display: none;
  position: absolute;
  top: 100%;
  left: 0;
  background: #f0eadc;
  min-width: 200px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  padding: 10px 0;
  z-index: 1001;
}

.khaas-nav-link-dropdown.active .khaas-dropdown-content,
.khaas-nav-link-dropdown:hover .khaas-dropdown-content {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.khaas-dropdown-link {
  padding: 8px 20px;
  display: block;
  white-space: nowrap;
}

.khaas-dropdown-link:hover {
  background: #6b5b4720;
}

.khaas-logo-simple {
  position: relative;
  height: 80px;
  width: auto;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px 0;
}

.khaas-logo-simple .khaas-logo-img {
  width: 120px;
  height: auto;
  object-fit: contain;
}

.khaas-social-icons {
  display: flex;
  height: 100%;
  gap: 1.5rem;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 1000;
}

.khaas-social-icon {
  width: 35px;
  height: 35px;
  background: transparent;
  color: #2f2f2f;
  display: flex;
  cursor: pointer;
  transition: all 0.3s ease;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  position: relative;
}

.khaas-social-icon:hover {
  background: #6b5b4769;
}

.khaas-social-icon img {
  width: 28px;
  height: 28px;
  object-fit: contain;
}

.khaas-cart-count {
  position: absolute;
  top: -8px;
  right: -8px;
  background: #8b7355;
  color: white;
  font-size: 12px;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.khaas-mobile-nav-toggle {
  display: none;
  flex-direction: column;
  justify-content: space-between;
  width: 30px;
  height: 21px;
  background: transparent;
  border: none;
  cursor: pointer;
  padding: 0;
  z-index: 1001;
}

.khaas-mobile-nav-toggle span {
  display: block;
  width: 100%;
  height: 3px;
  background-color: #2f2f2f;
  transition: all 0.3s ease-in-out;
}

@media (max-width: 768px) {
  .khaas-mobile-nav-toggle {
    display: flex;
    position: absolute;
    top: 20px;
    left: 20px;
  }

  .khaas-nav-left {
    position: fixed;
    top: 0;
    left: -100%;
    width: 70%;
    height: 100vh;
    background: #f0eadc;
    flex-direction: column;
    padding: 80px 40px;
    transition: left 0.3s ease-in-out;
    box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
  }

  .khaas-nav-left.active {
    left: 0;
  }

  .khaas-mobile-nav-toggle.active span:first-child {
    transform: rotate(45deg) translate(6px, 6px);
  }

  .khaas-mobile-nav-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .khaas-mobile-nav-toggle.active span:last-child {
    transform: rotate(-45deg) translate(6px, -6px);
  }

  .khaas-navbar {
    padding: 0 20px;
  }

  .khaas-logo-simple {
    margin: 0 auto;
  }

  .khaas-nav-right {
    position: absolute;
    right: 20px;
  }
}
</style>

<section class="khaas-header khaas-header-simple">
  <nav class="khaas-navbar">
    <div class="khaas-mobile-nav-toggle">
      <span></span>
      <span></span>
      <span></span>
    </div>
    <div class="khaas-nav-left">
      {% for link in main_menu.links %}
        {% if link.links != blank %}
          <div class="khaas-nav-link-dropdown">
            <a href="{{ link.url }}" class="khaas-nav-link">
              {{ link.title }}
              <span class="khaas-dropdown-icon">
                <img src="https://cdn.shopify.com/s/files/1/0660/3299/2486/files/direction_16534850.png?v=1750599934" alt="dropdown" />
              </span>
            </a>
            <div class="khaas-dropdown-content">
              {% for childlink in link.links %}
                <a href="{{ childlink.url }}" class="khaas-nav-link khaas-dropdown-link">{{ childlink.title }}</a>
              {% endfor %}
            </div>
          </div>
        {% else %}
          <a href="{{ link.url }}" class="khaas-nav-link">{{ link.title }}</a>
        {% endif %}
      {% endfor %}
    </div>
    <div class="khaas-logo khaas-logo-simple">
      <a href="/" class="khaas-logo-link">
        {% if section.settings.logo != blank %}
          {{ section.settings.logo | image_url: width: 180 | image_tag: 
            class: 'khaas-logo-img',
            alt: shop.name,
            loading: 'lazy'
          }}
        {% else %}
          <img src="{{ 'navlogomain.png' | asset_url }}" alt="{{ shop.name }}" class="khaas-logo-img">
        {% endif %}
      </a>
    </div>
    <div class="khaas-nav-right">
      <div class="khaas-social-icons">
        {% if section.settings.facebook_url != blank %}
          <a href="{{ section.settings.facebook_url }}" class="khaas-social-icon" target="_blank" rel="noopener" aria-label="Facebook">
            {% render 'icon-facebook' %}
          </a>
        {% endif %}
        {% if section.settings.instagram_url != blank %}
          <a href="{{ section.settings.instagram_url }}" class="khaas-social-icon" target="_blank" rel="noopener" aria-label="Instagram">
            {% render 'icon-instagram' %}
          </a>
        {% endif %}
        {% if section.settings.notes_url != blank %}
          <a href="{{ section.settings.notes_url }}" class="khaas-social-icon" target="_blank" rel="noopener" aria-label="Notes">
            {% render 'icon-twitter' %}
          </a>
        {% endif %}
        <a href="{{ routes.cart_url }}" class="khaas-social-icon" aria-label="Cart">
          <img src="https://cdn.shopify.com/s/files/1/0660/3299/2486/files/cart_16827100_a2297ce4-ee86-4aac-ad77-447bae6de8af.png?v=1750602141" alt="Cart" />
          {% if cart.item_count > 0 %}
            <span class="khaas-cart-count">{{ cart.item_count }}</span>
          {% endif %}
        </a>
      </div>
    </div>
  </nav>
</section>

{% schema %}
{
  "name": "Simple Header",
  "settings": [
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Main Menu",
      "default": "main-menu"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "notes_url",
      "label": "Notes URL"
    }
  ],
  "presets": [
    {
      "name": "Simple Header",
      "category": "Header"
    }
  ]
}
{% endschema %}

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  const mobileNavToggle = document.querySelector('.khaas-mobile-nav-toggle');
  const navLeft = document.querySelector('.khaas-nav-left');
  const dropdowns = document.querySelectorAll('.khaas-nav-link-dropdown');

  // Mobile menu toggle
  if (mobileNavToggle && navLeft) {
    mobileNavToggle.addEventListener('click', () => {
      mobileNavToggle.classList.toggle('active');
      navLeft.classList.toggle('active');
    });

    document.querySelectorAll('.khaas-nav-link').forEach(link => {
      link.addEventListener('click', () => {
        mobileNavToggle.classList.remove('active');
        navLeft.classList.remove('active');
      });
    });
  }

  // Dropdown handling
  dropdowns.forEach(dropdown => {
    const link = dropdown.querySelector('.khaas-nav-link');
    let timeoutId;

    // Mouse events
    dropdown.addEventListener('mouseenter', () => {
      clearTimeout(timeoutId);
      dropdowns.forEach(d => d.classList.remove('active'));
      dropdown.classList.add('active');
    });

    dropdown.addEventListener('mouseleave', () => {
      timeoutId = setTimeout(() => {
        dropdown.classList.remove('active');
      }, 150); // Small delay to allow moving to submenu
    });

    // Click events for touch devices
    link.addEventListener('click', (e) => {
      if (window.innerWidth <= 768) return; // Don't prevent default on mobile
      
      const isActive = dropdown.classList.contains('active');
      e.preventDefault();
      
      dropdowns.forEach(d => d.classList.remove('active'));
      if (!isActive) {
        dropdown.classList.add('active');
      }
    });
  });

  // Close dropdowns when clicking outside
  document.addEventListener('click', (e) => {
    if (!e.target.closest('.khaas-nav-link-dropdown')) {
      dropdowns.forEach(dropdown => dropdown.classList.remove('active'));
    }
  });
});
{% endjavascript %} 